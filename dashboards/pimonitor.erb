<style>


.icon-background {
	font-size: 100px;
	opacity: 0.2;
	margin-top: 25px;
}

.icon-background.big {
	margin: 50px 0px 0px 0px;
	font-size: 110px;
	opacity: 0.2;
}
</style>


<head>
</head>

<% 
	link_transmission="http://192.168.0.121:9091/transmission/web/" 
	link_sickrage="http://192.168.0.121:8081/home/"
	link_homepage="http://192.168.0.121"

	target_class = " target=\"_blank\" class=\"fill-parent\""

	anchor_transmission = " href=" + link_transmission + target_class
	anchor_sickrage     = " href=" + link_sickrage     + target_class
	anchor_homepage     = " href=" + link_homepage     + target_class
%>

<% if false %>
<a class="waves-effect waves-light btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Macha!" onclick="Materialize.toast('I am a toast', 4000)">Toast!</a>
<% end %>


<div class="page-title card white-text pink darken-1 center">
	Pi Monitor
</div>

<% content_for :title do %>Sid's Pi!<% end %>

<div class="gridster">
  <ul>

	<li data-row="1" data-col="1" data-sizex="2" data-sizey="1" class="hoverable card tooltipped" data-position="bottom" data-delay="50" data-tooltip="Macha!">
	<a <%= anchor_homepage %> >
		<div class="grey card " data-id="pistatus" data-view="Text" data-title="Pi" data-text="unknown"></div>
		<i class="fa fa-user icon-background"></i>
	</a>
    </li>

	<li data-row="1" data-col="1" data-sizex="2" data-sizey="1" class="hoverable card">	
		<div class="grey card " data-id="nginxstatus" data-view="Text" data-title="Nginx"  data-text="unknown" ></div>
		<i class ="fa fa-server icon-background"></i>	
	</li>


	<li data-row="1" data-col="1" data-sizex="2" data-sizey="1" class="hoverable card ">
		<a <%= anchor_sickrage %> >
			<div class="grey card" data-id="srstatus" data-view="Text" data-title="Sickrage" data-text="unknown" ></div>
			<i class="fa fa-television icon-background"></i>
		</a>
	</li>

	
	<li data-row="1" data-col="1" data-sizex="2" data-sizey="1" class="hoverable card" >	
		<a <%= anchor_transmission %> >
			<div class="grey card fill-parent" data-id="txrstatus" data-view="Text" data-title="Transmission" data-text="unknown" ></div>	
			<i class="fa fa-arrow-circle-down icon-background"></i>
		</a>	
	</li>

	<li data-row="1" data-col="1" data-sizex="2" data-sizey="1" class="hoverable card">
	<div class="grey card " data-id="sambastatus" data-view="Text" data-title="Samba" data-text="unknown"></div>
	<i class="fa fa-folder-open icon-background"></i>
	</li>

	<li data-row="2" data-col="1" data-sizex="3" data-sizey="1" class="hoverable card">
	 <div class="orange card " data-id="temperature" data-view="Meter" data-title="Temperature" data-min="0" data-max="100" data-moreinfo="celsius"></div>	
	</li>

	<li data-row="2" data-col="4" data-sizex="4" data-sizey="1" class="hoverable card">
	<div  class="card " data-id="serverload" data-view="Graph" data-title="Load (1 min)" style="background-color: #ff9618;"></div>
	</li>



	<li data-row="2" data-col="8" data-sizex="3" data-sizey="1" class="hoverable card">
	 <div  class="orange card " data-id="memory" data-view="Meter" data-title="Memory" data-min="0"  data-max="862" data-moreinfo="MB used out of 862MB"></div>	
	</li>




    <li data-row="3" data-col="2" data-sizex="2" data-sizey="1" class="row-margin-top hoverable card">
      <div class="card light-blue darken-1" data-id="tvshows" data-view="Number" data-title="TV Shows"></div>
	<i class="fa fa-hashtag icon-background big"></i>
    </li>


    <li data-row="3" data-col="4" data-sizex="2" data-sizey="1" class="row-margin-top hoverable card">
      <div class="card light-blue darken-1" data-id="movies" data-view="Number" data-title="Movies"></div>
	<i class="fa fa-video-camera icon-background big"></i>
    </li>


    <li data-row="3" data-col="6" data-sizex="2" data-sizey="1" class="row-margin-top hoverable card">
      <div class="card light-blue darken-1" data-id="downloading" data-view="Number" data-title="Downloading"></div>
	<i class="fa fa-arrow-down icon-background big"></i>
    </li>

    <li data-row="3" data-col="8" data-sizex="2" data-sizey="1" class="row-margin-top hoverable card">
      <div class="card light-blue darken-1" data-id="completed" data-view="Number" data-title="Completed"></div>
	<i class="fa fa-check icon-background big"></i>
    </li>

  </ul>
</div>
